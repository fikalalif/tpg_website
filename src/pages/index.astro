---
import "../styles/global.css";
import SwiperCarousel from "../components/SwiperCarousel.jsx";
import SwiperCarouselClient from "../components/SwiperCarouselClient.jsx";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import ModelViewer from "../components/ModelViewer";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {/* Pastikan initial-scale=1.0 ada */}
    <meta name="generator" content={Astro.generator} />
    <script
      type="module"
      src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"
    ></script>
    <title>Tempat Peraduan Group</title>
    {/* Global styles for elegant animations */}
    <style is:global>
      @keyframes fade-in-scale {
        from {
          opacity: 0;
          transform: scale(0.9);
        }
        to {
          opacity: 1;
          transform: scale(1);
        }
      }
      .animate-fade-in-scale {
        animation: fade-in-scale 1s ease-out forwards;
      }
    </style>
  </head>
  <body class="bg-black text-center w-full max-w-full overflow-x-hidden">
    {/* Tambahkan overflow-x-hidden untuk mencegah scroll horizontal */}
    <nav>
      <Navbar />
    </nav>
    <main class="pt-1 md:pt-1">
      {/* Tambahkan padding top untuk memberi ruang bagi fixed navbar */}
      <div class="relative w-full h-screen">
        <img
          src="/bg_top.jpg"
          alt="Background"
          class="absolute inset-0 w-full h-full object-cover z-0"
        />
        <div>
          <ModelViewer client:only="react" />
        </div>
      </div>
    </main>
    <div>
      <SwiperCarousel client:only="react" />
    </div>
    <div>
      <SwiperCarouselClient client:only="react" />
    </div>
  </body>
  <footer>
    <Footer />
  </footer>
  <script>
    const toggleBtn = document.getElementById("hamburger-btn"); // Ganti nama variabel agar lebih jelas
    const mobileMenu = document.getElementById("mobile-menu"); // Ganti nama variabel

    if (toggleBtn && mobileMenu) {
      toggleBtn.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
        // Optional: Ganti ikon hamburger ke ikon close (X) saat menu terbuka
        if (mobileMenu.classList.contains("hidden")) {
          toggleBtn.innerHTML = `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>`;
        } else {
          toggleBtn.innerHTML = `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>`;
        }
      });
    }
    // Catatan: Animasi transisi untuk menu mobile (hamburger) mungkin terbatas
    // karena penggunaan class 'hidden' yang mengatur 'display: none'.
    // Untuk animasi yang lebih halus, diperlukan modifikasi pada komponen Navbar.astro
    // untuk menggunakan properti seperti 'max-height' atau 'opacity' yang dapat ditransisikan.
  </script>
</html>
