---
import "../styles/global.css";
import SwiperCarousel from "../components/SwiperCarousel.jsx";
import SwiperCarouselClient from "../components/SwiperCarouselClient.jsx";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import ModelViewer from "../components/ModelViewer";
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />
  
  <title>Tempat Peraduan Group</title>

  <script type="module" src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>

  {/* Global styles */}
  <style is:global>
    /* LOADING SCREEN */
    .loading-screen {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: radial-gradient(circle at center, #2a2a2a 0%, #000000 100%);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 9999; /* Paling atas */
      transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Saat hilang: Transparan DAN tidak bisa diklik (tembus pandang) */
    .loading-screen.fade-out {
      opacity: 0;
      visibility: hidden;
      transform: scale(1.1);
      pointer-events: none !important; /* PENTING: Agar bisa klik tombol di belakangnya */
    }

    /* CSS 3D Effect Logo */
    .logo-container-3d {
      perspective: 1000px; 
      position: relative;
      z-index: 10;
    }

    .spinning-3d-logo {
        image-rendering: optimizeQuality;
        filter: drop-shadow(0 10px 15px rgba(0,0,0,0.5));
        animation: spin3DReal 4s infinite linear;
        transform-style: preserve-3d;
        will-change: transform, filter;
    }

    @keyframes spin3DReal {
      0% { transform: rotateY(0deg); filter: brightness(100%) drop-shadow(0 10px 15px rgba(0,0,0,0.5)); }
      25% { filter: brightness(85%) drop-shadow(5px 10px 10px rgba(0,0,0,0.4)); }
      50% { transform: rotateY(180deg); filter: brightness(60%) drop-shadow(0 5px 5px rgba(0,0,0,0.3)); }
      75% { filter: brightness(85%) drop-shadow(-5px 10px 10px rgba(0,0,0,0.4)); }
      100% { transform: rotateY(360deg); filter: brightness(100%) drop-shadow(0 10px 15px rgba(0,0,0,0.5)); }
    }

    /* Utility Animations */
    .content-hidden { opacity: 0; }
    .content-visible { opacity: 1; transition: opacity 0.8s ease-out; }
    .stagger-animation { opacity: 0; transform: translateY(30px); }
    .animate-fade-in-scale { animation: fadeInScale 1s forwards; }
    @keyframes fadeInScale { to { opacity: 1; transform: translateY(0); } }
    
    /* Navbar Styles (Backup jika di component tidak terload) */
    .navbar-scrolled {
      backdrop-filter: blur(25px);
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }
    
    html { scroll-behavior: smooth; }
  </style>
</head>

<body class="bg-black text-center w-full max-w-full overflow-x-hidden font-monsserat">
  
  <div id="loading-screen" class="loading-screen">
    <div class="logo-container-3d relative z-10">
      <img src="tpg_center.png" alt="TPG Logo" class="spinning-3d-logo h-64 md:h-80 object-contain" />
    </div>
  </div>

  <div id="main-content" class="content-hidden">
    <nav>
      <Navbar/>
    </nav>

    <main class="pt-1 md:pt-1">
      <div class="bg-black relative w-full h-screen stagger-animation">
        <ModelViewer client:visible/>
      </div>
    </main>

    <div class="stagger-animation">
      <SwiperCarousel client:visible/>
    </div>

    <div class="stagger-animation">
      <SwiperCarouselClient client:visible/>
    </div>

    <footer>
      <Footer/>
    </footer>
  </div>

  <script is:inline>
    // 1. LOGIKA LOADING SCREEN
    function finishLoading(isAnimated) {
      const loadingScreen = document.getElementById('loading-screen');
      const mainContent = document.getElementById('main-content');
      
      if (loadingScreen) {
        if (isAnimated) {
          loadingScreen.classList.add('fade-out');
          // Paksa hilang total setelah 1 detik
          setTimeout(() => { loadingScreen.style.display = 'none'; }, 1000);
        } else {
          loadingScreen.style.display = 'none';
        }
      }

      if (mainContent) {
        mainContent.classList.remove('content-hidden');
        mainContent.classList.add('content-visible');
        
        // Animasi elemen satu per satu
        const elements = document.querySelectorAll('.stagger-animation');
        elements.forEach((el, index) => {
          setTimeout(() => {
            el.classList.add('animate-fade-in-scale');
          }, isAnimated ? index * 150 : 0);
        });
      }
    }

    // Jalankan Loading Screen Logic
    const hasVisited = sessionStorage.getItem('hasVisited');
    if (hasVisited) {
      finishLoading(false); // Instant (User lama)
    } else {
      // User baru: tunggu sebentar biar animasi logo tampil
      window.addEventListener('load', () => {
        setTimeout(() => {
          finishLoading(true); 
          sessionStorage.setItem('hasVisited', 'true');
        }, 2000);
      });
      // Fallback jika window.load macet
      setTimeout(() => { finishLoading(true); }, 5000);
    }

    // 2. LOGIKA NAVBAR & HAMBURGER (FIXED)
    // Dijalankan saat script dimuat
    (function initNavbar() {
      const hamburgerBtn = document.getElementById('hamburger-btn');
      const mobileMenu = document.getElementById('mobile-menu');
      const navbar = document.getElementById('navbar');

      // Debugging: Cek di console browser (F12) apakah elemen ditemukan
      if (!hamburgerBtn) console.error("Hamburger Button tidak ditemukan!");
      if (!mobileMenu) console.error("Mobile Menu tidak ditemukan!");

      if (hamburgerBtn && mobileMenu) {
        // Clone button untuk menghapus event listener lama yang mungkin nyangkut
        const newBtn = hamburgerBtn.cloneNode(true);
        hamburgerBtn.parentNode.replaceChild(newBtn, hamburgerBtn);

        // Pasang Event Listener Baru
        newBtn.addEventListener('click', (e) => {
          e.stopPropagation(); // Biar tidak tembus klik ke bawah
          
          const menuContent = mobileMenu.querySelector('.mobile-menu-content');
          const lines = newBtn.querySelectorAll('.hamburger-line');
          
          const isHidden = mobileMenu.classList.contains('hidden');

          if (isHidden) {
            // -- BUKA MENU --
            mobileMenu.classList.remove('hidden');
            // Animasi X pada icon
            if(lines.length >= 3) {
                lines[0].classList.add('rotate-45', 'translate-y-1.5');
                lines[1].classList.add('opacity-0');
                lines[2].classList.add('-rotate-45', '-translate-y-1.5');
            }
            // Animasi Slide Down
            setTimeout(() => {
                mobileMenu.classList.remove('max-h-0');
                mobileMenu.classList.add('max-h-screen');
                if(menuContent) {
                    menuContent.classList.remove('opacity-0', 'translate-y-4');
                    menuContent.classList.add('opacity-100', 'translate-y-0');
                }
            }, 10);

          } else {
            // -- TUTUP MENU --
            // Animasi Slide Up
            if(menuContent) {
                menuContent.classList.remove('opacity-100', 'translate-y-0');
                menuContent.classList.add('opacity-0', 'translate-y-4');
            }
            mobileMenu.classList.remove('max-h-screen');
            mobileMenu.classList.add('max-h-0');
            
            // Icon Balik Normal
            if(lines.length >= 3) {
                lines[0].classList.remove('rotate-45', 'translate-y-1.5');
                lines[1].classList.remove('opacity-0');
                lines[2].classList.remove('-rotate-45', '-translate-y-1.5');
            }

            // Sembunyikan setelah animasi selesai
            setTimeout(() => {
                mobileMenu.classList.add('hidden');
            }, 500);
          }
        });

        // Tutup menu saat link diklik
        document.querySelectorAll('.mobile-nav-link').forEach(link => {
          link.addEventListener('click', () => {
             if(!mobileMenu.classList.contains('hidden')) newBtn.click();
          });
        });
      }

      // Navbar Scroll Effect
      window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
          navbar?.classList.add('navbar-scrolled');
        } else {
          navbar?.classList.remove('navbar-scrolled');
        }
      });

    })();
  </script>
</body>
</html>