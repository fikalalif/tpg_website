---
import SwiperCarousel from "./SwiperCarousel"
import SwiperCarouselClient from "./SwiperCarouselClient"
import Navbar from "./Navbar.astro"
import Footer from "./Footer.astro"
---

<nav>
    <Navbar/>
</nav>

<main class="pt-1 md:pt-1">
      {/* Tambahkan padding top untuk memberi ruang bagi fixed navbar */}
      <div class="relative w-full h-screen">
        <img
          src="bg_top.jpg"
          alt="Background"
          class="absolute inset-0 w-full h-full object-cover z-0"
        />
        <div class="absolute inset-0 flex justify-center items-center z-10 p-4">
          {/* Tambah padding untuk layar kecil */}
          <img
            src="tpg_center.png"
            alt="Center Image"
            class="w-3/4 sm:w-2/4 md:w-1/3 lg:w-1/4 xl:w-1/5 max-w-xs sm:max-w-sm md:max-w-md"
          />
        </div>
      </div>

      <div>
        <SwiperCarousel client:only="react" />
      </div>
      <div>
        <SwiperCarouselClient client:only="react" />
      </div>
</main>

<footer>
    <Footer/>
</footer>