---
// Navbar component for Tempat Peraduan Group
---

<nav class="z-[999] fixed w-full top-0 left-0 transition-all duration-300" id="navbar">
  <!-- Main navbar container -->
  <div class="border-2 border-[rgba(180,180,180,0.6)] bg-gradient-to-r from-zinc-600 via-black to-zinc-600 backdrop-blur-md opacity-90 rounded-b-3xl shadow-lg transition-all duration-300 hover:opacity-95">
    <div class="container mx-auto flex justify-between items-center p-4 relative">
      
      <!-- Logo -->
      <a href="/" class="group flex items-center transition-transform duration-300 hover:scale-105">
        <img 
          src="tpg_logo.png" 
          class="h-10 w-auto sm:h-12 transition-all duration-300 group-hover:brightness-110 group-hover:drop-shadow-lg" 
          alt="TPG Logo" 
        />
      </a>

      <!-- Desktop Menu Links -->
      <div class="hidden md:flex space-x-6 lg:space-x-8 items-center">
        <a 
          href="/about" 
          class="nav-link text-white hover:text-gray-300 font-medium tracking-wide transition-all duration-300 relative group"
        >
          <span class="relative z-10">ABOUT</span>
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-white to-gray-300 transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a 
          href="#brands" 
          class="nav-link text-white hover:text-gray-300 font-medium tracking-wide transition-all duration-300 relative group"
        >
          <span class="relative z-10">BRANDS</span>
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-white to-gray-300 transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a 
          href="#client" 
          class="nav-link text-white hover:text-gray-300 font-medium tracking-wide transition-all duration-300 relative group"
        >
          <span class="relative z-10">CLIENT</span>
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-white to-gray-300 transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a 
          href="#partnership" 
          class="nav-link text-white hover:text-gray-300 font-medium tracking-wide transition-all duration-300 relative group"
        >
          <span class="relative z-10">PARTNERSHIP</span>
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-white to-gray-300 transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a 
          href="#career" 
          class="nav-link text-white hover:text-gray-300 font-medium tracking-wide transition-all duration-300 relative group"
        >
          <span class="relative z-10">CAREER</span>
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-white to-gray-300 transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a 
          href="#contact" 
          class="nav-link text-white hover:text-gray-300 font-medium tracking-wide transition-all duration-300 relative group"
        >
          <span class="relative z-10">CONTACT US</span>
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-white to-gray-300 transition-all duration-300 group-hover:w-full"></span>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button 
          id="hamburger-btn" 
          class="text-white focus:outline-none p-2 rounded-lg transition-all duration-300 hover:bg-white/10 active:scale-95"
          aria-label="Toggle mobile menu"
        >
          <!-- Hamburger Icon -->
          <div class="hamburger-icon w-6 h-6 flex flex-col justify-center items-center space-y-1">
            <span class="hamburger-line block w-6 h-0.5 bg-white transition-all duration-300"></span>
            <span class="hamburger-line block w-6 h-0.5 bg-white transition-all duration-300"></span>
            <span class="hamburger-line block w-6 h-0.5 bg-white transition-all duration-300"></span>
          </div>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div 
      id="mobile-menu" 
      class="md:hidden bg-gradient-to-b from-black/95 to-zinc-800/95 backdrop-blur-md rounded-b-2xl border-t border-gray-600/30 overflow-hidden transition-all duration-300 max-h-0"
    >
      <div class="mobile-menu-content opacity-0 transform translate-y-4 transition-all duration-300 py-2">
        <a 
          href="/about" 
          class="mobile-nav-link block text-white hover:text-gray-300 hover:bg-white/10 px-6 py-4 transition-all duration-300 border-b border-gray-700/30"
        >
          <span class="font-medium tracking-wide text-lg">ABOUT</span>
        </a>
        <a 
          href="#brands" 
          class="mobile-nav-link block text-white hover:text-gray-300 hover:bg-white/10 px-6 py-4 transition-all duration-300 border-b border-gray-700/30"
        >
          <span class="font-medium tracking-wide text-lg">BRANDS</span>
        </a>
        <a 
          href="#client" 
          class="mobile-nav-link block text-white hover:text-gray-300 hover:bg-white/10 px-6 py-4 transition-all duration-300 border-b border-gray-700/30"
        >
          <span class="font-medium tracking-wide text-lg">CLIENT</span>
        </a>
        <a 
          href="#partnership" 
          class="mobile-nav-link block text-white hover:text-gray-300 hover:bg-white/10 px-6 py-4 transition-all duration-300 border-b border-gray-700/30"
        >
          <span class="font-medium tracking-wide text-lg">PARTNERSHIP</span>
        </a>
        <a 
          href="#career" 
          class="mobile-nav-link block text-white hover:text-gray-300 hover:bg-white/10 px-6 py-4 transition-all duration-300 border-b border-gray-700/30"
        >
          <span class="font-medium tracking-wide text-lg">CAREER</span>
        </a>
        <a 
          href="#contact" 
          class="mobile-nav-link block text-white hover:text-gray-300 hover:bg-white/10 px-6 py-4 transition-all duration-300"
        >
          <span class="font-medium tracking-wide text-lg">CONTACT US</span>
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Mobile menu functionality
    const hamburgerBtn = document.getElementById('hamburger-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileMenuContent = mobileMenu?.querySelector('.mobile-menu-content');
    const hamburgerLines = document.querySelectorAll('.hamburger-line');
    const navbar = document.getElementById('navbar');
    
    let isMenuOpen = false;

    // Toggle mobile menu
    hamburgerBtn?.addEventListener('click', () => {
      isMenuOpen = !isMenuOpen;
      
      if (isMenuOpen) {
        // Open menu
        mobileMenu?.classList.remove('max-h-0');
        mobileMenu?.classList.add('max-h-screen');
        mobileMenu?.classList.remove('hidden');
        
        setTimeout(() => {
          mobileMenuContent?.classList.remove('opacity-0', 'translate-y-4');
          mobileMenuContent?.classList.add('opacity-100', 'translate-y-0');
        }, 50);
        
        // Animate hamburger to X
        hamburgerLines[0]?.classList.add('rotate-45', 'translate-y-1.5');
        hamburgerLines[1]?.classList.add('opacity-0');
        hamburgerLines[2]?.classList.add('-rotate-45', '-translate-y-1.5');
        
      } else {
        // Close menu
        mobileMenuContent?.classList.remove('opacity-100', 'translate-y-0');
        mobileMenuContent?.classList.add('opacity-0', 'translate-y-4');
        
        setTimeout(() => {
          mobileMenu?.classList.remove('max-h-screen');
          mobileMenu?.classList.add('max-h-0');
        }, 200);
        
        // Animate X back to hamburger
        hamburgerLines[0]?.classList.remove('rotate-45', 'translate-y-1.5');
        hamburgerLines[1]?.classList.remove('opacity-0');
        hamburgerLines[2]?.classList.remove('-rotate-45', '-translate-y-1.5');
      }
    });

    // Close mobile menu when clicking on a link
    const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
    mobileNavLinks.forEach(link => {
      link.addEventListener('click', () => {
        if (isMenuOpen) {
          hamburgerBtn?.click(); // Trigger close animation
        }
      });
    });

    // Navbar scroll effect
    let lastScrollY = window.scrollY;
    
    window.addEventListener('scroll', () => {
      const currentScrollY = window.scrollY;
      
      if (currentScrollY > 100) {
        navbar?.classList.add('navbar-scrolled');
      } else {
        navbar?.classList.remove('navbar-scrolled');
      }
      
      if (currentScrollY > lastScrollY && currentScrollY > 200) {
        navbar?.classList.add('-translate-y-full');
      } else {
        navbar?.classList.remove('-translate-y-full');
      }
      
      lastScrollY = currentScrollY;
    });

    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          const offsetTop = target.offsetTop - 100;
          window.scrollTo({
            top: offsetTop,
            behavior: 'smooth'
          });
        }
      });
    });

    // Add staggered animation to desktop nav links
    const navLinks = document.querySelectorAll('.nav-link');
    navLinks.forEach((link, index) => {
      link.style.animationDelay = `${index * 0.1}s`;
      link.classList.add('animate-fadeInDown');
    });
  });
</script>

<style>
  /* Custom animations */
  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeInDown {
    animation: fadeInDown 0.6s ease-out forwards;
  }

  /* Navbar scroll state */
  .navbar-scrolled {
    backdrop-filter: blur(20px);
  }

  .navbar-scrolled > div {
    opacity: 0.98 !important;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  /* Mobile menu animations */
  .mobile-menu {
    transition: max-height 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .mobile-menu-content {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Hamburger animation */
  .hamburger-line {
    transform-origin: center;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Active link indicator */
  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, #ffffff, #d1d5db);
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Prevent body scroll when mobile menu is open */
  body.menu-open {
    overflow: hidden;
  }

  /* Responsive text sizing */
  @media (max-width: 1024px) {
    .nav-link {
      font-size: 0.9rem;
    }
  }

  /* Enhanced hover effects */
  .nav-link:hover {
    transform: translateY(-1px);
    text-shadow: 0 2px 4px rgba(255, 255, 255, 0.1);
  }

  .mobile-nav-link:hover {
    transform: translateX(4px);
  }

  /* Loading animation for the entire navbar */
  nav {
    animation: slideDown 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @keyframes slideDown {
    from {
      transform: translateY(-100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
</style>
